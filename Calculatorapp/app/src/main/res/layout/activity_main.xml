<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
    android:id="@+id/calcExpression"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:textColor="@color/numberButton"
    android:textSize="40sp"
    android:ellipsize="start"
    android:gravity="end"
    android:singleLine="true"
    />

    <TextView
        android:id="@+id/calcResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textColor="@color/numberButton"
        android:textSize="30sp"
        android:gravity="end"
        android:ellipsize="end"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/calClear"
            style="@style/ActionButtonStyle"
            android:text="CE"
            />
        <TextView
            android:id="@+id/calOpen"
            style="@style/ActionButtonStyle"
            android:text="("
            />
        <TextView
            android:id="@+id/calClose"
            style="@style/ActionButtonStyle"
            android:text=")"
            />
        <TextView
            android:id="@+id/calDivide"
            style="@style/ActionButtonStyle"
            android:text="/"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calSeven"
                style="@style/NumberButtonStyle"
                android:text="7"
                />
            <TextView
                android:id="@+id/calEight"
                style="@style/NumberButtonStyle"
                android:text="8"
                />
            <TextView
                android:id="@+id/calNine"
                style="@style/NumberButtonStyle"
                android:text="9"
                />
            <TextView
                android:id="@+id/calMul"
                style="@style/ActionButtonStyle"
                android:text="*"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calFour"
                style="@style/NumberButtonStyle"
                android:text="4"
                />
            <TextView
                android:id="@+id/calFive"
                style="@style/NumberButtonStyle"
                android:text="5"
                />
            <TextView
                android:id="@+id/calSix"
                style="@style/NumberButtonStyle"
                android:text="6"
                />
            <TextView
                android:id="@+id/calMinus"
                style="@style/ActionButtonStyle"
                android:text="-"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/calOne"
                style="@style/NumberButtonStyle"
                android:text="1"
                />
            <TextView
                android:id="@+id/calTwo"
                style="@style/NumberButtonStyle"
                android:text="2"
                />
            <TextView
                android:id="@+id/calThree"
                style="@style/NumberButtonStyle"
                android:text="3"
                />
            <TextView
                android:id="@+id/calPlus"
                style="@style/ActionButtonStyle"
                android:text="+"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/calDot"
                style="@style/NumberButtonStyle"
                android:text="."
                />
            <TextView
                android:id="@+id/calZero"
                style="@style/NumberButtonStyle"
                android:text="0"
                />
            <ImageView
                android:id="@+id/calBack"
                android:src="@drawable/backspace"
                style="@style/NumberButtonStyle"
                android:scaleType="center"
                />
            <TextView
                android:id="@+id/calEquals"
                style="@style/ActionButtonStyle"
                android:text="="
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>