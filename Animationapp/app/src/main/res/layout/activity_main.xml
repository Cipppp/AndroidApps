<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueSoft"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="Your progress!"
        android:textColor="@color/blueSecond"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:textAlignment="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/josefin_sans_semibold"
        android:text="@string/it_help_you_to_study_harder_everyday_you_like_to"
        android:textColor="@color/silver"
        android:textSize="16sp"
        android:layout_marginTop="14dp"
        android:lineSpacingExtra="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerTitle"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/ic_cards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtitle" />

    <LinearLayout
        android:id="@+id/parent_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ic_cards">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resultOne"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_item_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textAlignment="center"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textColor="@color/blueSecond"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rewards"
                    android:textAlignment="center"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textColor="@color/blueSecond"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resultTwo"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_item_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textAlignment="center"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textColor="@color/blueSecond"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:textAlignment="center"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textColor="@color/blueSecond"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/resultThree"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_item_result"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textAlignment="center"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textColor="@color/blueSecond"
                    android:textSize="24sp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MVP"
                    android:textAlignment="center"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:textColor="@color/blueSecond"
                    android:textSize="16sp"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/btn_next_course"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/josefin_sans_semibold"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:text="Next Course"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parent_result" />

</androidx.constraintlayout.widget.ConstraintLayout>